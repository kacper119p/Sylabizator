<Window x:Class="Sylabizator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sylabizator"
        mc:Ignorable="d"
        Title="Sylaby" Height="450" Width="820">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>
        <TextBox Background="#dddddd" Height="50" Width="400" FontSize ="24" VerticalContentAlignment="Center" FontFamily="Times New Roman" Margin="200,28,200,139" Grid.Row="1" RenderTransformOrigin="0.502,0.073" TextChanged="TextBoxOnTextChanged" Name="input"/>
        <Button Grid.Row="1" Height="50" Width="200" FontSize ="24" VerticalAlignment="Center" FontFamily="Times New Roman" Margin="300,0,300,0" Click="OnButtonClick">Podziel</Button>
        <Label Height="50" Width="400" FontSize ="24" Grid.Row="1" Margin="200,138,200,29" FontFamily="Times New Roman" HorizontalContentAlignment="Center" VerticalAlignment="Center" Name="output"></Label>
    </Grid>
</Window>
